<div class="card grey lighten-4">
  <div class="card-content">
    <span class="card-title"><%= t('.sign_in', :default => "Sign in") %></span>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: "form", class: "form-horizontal" }) do |f| %>
      <div class="input-field">
        <%= f.email_field :email, autofocus: true, class: "validate" %>
        <%= f.label :email, "data-error" => "invalid email" %>
      </div>
      <div class="input-field">
        <%= f.password_field :password, autocomplete: "off", class: "validate" %>
        <%= f.label :password %>
      </div>
      <% if devise_mapping.rememberable? %>
      <p>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </p>
      <% end %>
      <div class="card-action">
        <%= f.submit  t('.sign_in', :default => "Sign in"), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
<%= render "devise/shared/links" %>
