<%= render "layouts/error_messages", resource: @user %>

<div class="card grey lighten-4">
  <div class="card-content">
    <span class="card-title"><%= t('.change_your_password', :default => 'Change your password') %></span>
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, role: "form" }) do |f| %>
      <%= f.hidden_field :reset_password_token %>

      <div class="input-field">
        <%= f.password_field :password, autofocus: true, class: "validate"  %>
        <%= f.label :password, t('.new_password', :default => 'New password') %>
      </div>

      <div class="input-field">
        <%= f.password_field :password_confirmation, class: "validate"  %>
        <%= f.label :password_confirmation, t('.confirm_new_password', :default => 'Confirm new password') %>
      </div>

      <div class="card-action">
        <%= f.submit t('.change_my_password', :default => 'Change my password'), class: "waves-effect waves-light btn light-green lighten-1" %>
      </div>
    <% end %>
  </div>
</div>
<%= render "devise/shared/links" %>
