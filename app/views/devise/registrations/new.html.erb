<%= bootstrap_devise_error_messages! %>
<div class="panel panel-default">
  <div class="panel-heading">
    <h4><%= t('.sign_up', :default => "Sign up") %></h4>
  </div>
  <div class="panel-body">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { role: "form", class: "form-horizontal" }) do |f| %>
      <div class="form-group">
        <%= f.label :name, class: "control-label col s3" %>
        <div class="col s9">
          <%= f.text_field :name, autofocus: true, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :account, class: "control-label col s3" %>
        <div class="col s9">
          <i>(You can use small letters, numbers and underbars, less than 24 characters in total.)</i>
          <div class="input-group">
            <div class="input-group-addon">@</div>
            <%= f.text_field :account, class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :email, class: "control-label col s3" %>
        <div class="col s9">
          <%= f.email_field :email, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password, class: "control-label col s3" %>
        <div class="col s9">
          <%= f.password_field :password, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, class: "control-label col s3" %>
        <div class="col s9">
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>
      </div>
      <%= f.submit t('.sign_up', :default => "Sign up"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
<%= render "devise/shared/links" %>
