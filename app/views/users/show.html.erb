<div class="page-header">
  <h1>
    <%= @user.name %>
    <small>
      @<%= @user.account %>
      <span class="badge"><%= @histories_count[:today] %></span>
      <span class="histories_count_split">/</span>
      <span class="badge"><%= @histories_count[:total] %></span>
    </small>
  </h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @user.name %></dd>
  <dt>Account:</dt>
  <dd>@<%= @user.account %></dd>
  <dt>Done topics:</dt>
  <dd>
    Today: <span><%= @histories_count[:today] %></span> / Total: <span><%= @histories_count[:total] %></span>
  </dd>
</dl>

<% if user_signed_in? && @user.id === current_user.id %>
<div>
  <p>
    <%= link_to edit_user_registration_path, class: "btn btn-default" do %>
    <span class="glyphicon glyphicon-cog"></span> Settings
    <% end %>
  </p>
</div>
<% end %>

<div>
  <p>
    <%= link_to "Histories", user_histories_path(@user.account), class: "btn btn-primary" %>
    <%= link_to "Topics", user_topics_path(@user.account), class: "btn btn-primary" %>
    <%= link_to user_reports_path(@user.account), class: "btn btn-link" do %>
      <span class="glyphicon glyphicon-flag"></span> Reports
    <% end %>
  </p>
</div>
