<%= render "layouts/error_messages", resource: @user %>

<div class="card grey lighten-4">
  <div class="card-content">
    <span class="card_title"><%= t('.forgot_your_password', :default => 'Forgot your password?') %></span>
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, role: "form" }) do |f| %>
      <div class="input-field">
        <%= f.email_field :email, autofocus: true, class: "validate" %>
        <%= f.label :email, "data-error" => "invalid email" %>
      </div>

      <div class="card-action">
        <%= f.submit t('.send_me_reset_password_instructions', :default => "Send me reset password instructions"), class: "waves-effect waves-light btn light-green lighten-1" %>
      </div>
    <% end %>
  </div>
</div>
<%= render "devise/shared/links" %>
