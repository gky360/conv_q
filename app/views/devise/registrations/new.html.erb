<%= render "layouts/error_messages", resource: @user %>

<div class="card grey lighten-4">
  <div class="card-content">
    <span class="card-title"><%= t('.sign_up', :default => "Sign up") %></span>
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { role: "form", class: "" }) do |f| %>
      <div class="input-field">
        <div class="col s9">
          <%= f.text_field :name, autofocus: true, class: "validate" %>
        </div>
        <%= f.label :name %>
      </div>
      <div class="input-field">
        <%= f.text_field :account, class: "validate", placeholder: "@" %>
        <%= f.label :account %>
      </div>
      <div class="input-field">
        <%= f.email_field :email, class: "validate" %>
        <%= f.label :email, "data-error" => "invalid email" %>
      </div>
      <div class="input-field">
        <%= f.password_field :password, class: "validate" %>
        <%= f.label :password %>
      </div>
      <div class="input-field">
        <%= f.password_field :password_confirmation, class: "validate" %>
        <%= f.label :password_confirmation %>
      </div>
      <div class="card-action">
        <%= f.submit t('.sign_up', :default => "Sign up"), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
<%= render "devise/shared/links" %>
