<%= form_for @topic, :html => { :class => "form-horizontal topic" } do |f| %>

  <% if @topic.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@topic.errors.count, "error") %> prohibited this topic from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @topic.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, :class => 'control-label col m3' %>
    <div class="col m9">
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group" ng-controller="tagsCtrl">
    <%= label_tag :tag_names, "Tags", class: "control-label col m3" %>
    <div class="col m9">
      <%= text_field_tag :tag_names, @topic.tags.pluck(:name).join(","), class: "form-control", data: { role: "tagsinput" } %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :source_url, :class => 'control-label col m3' %>
    <div class="col m9">
      <i>(Optional: Fill in the url if you got this topic from somewhere in the Internet.)</i>
      <%= f.url_field :source_url, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col offset-m3 m9">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                topics_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
