<div class="page-header">
  <h1><%= @user.name %>'s Topics</h1>
</div>

<%= render partial: "topics/search", locals: { q: @q, panel_title: "Search #{@user.name}'s Topics" } %>

<div>
  <p>
    <%= link_to "New Topic", new_topic_path, class: 'btn btn-primary' %>
  </p>
</div>

<p>
  <%= page_entries_info @topics %>
</p>

<%= render partial: "topics/topics" %>

<%= paginate @topics %>

<div>
  <p>
    <%= link_to user_path(@user.account), class: "btn btn-default" do %>
      <span class="glyphicon glyphicon-chevron-left"></span> @<%= @user.account %>
    <% end %>
  </p>
</div>
