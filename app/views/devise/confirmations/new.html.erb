<%= render "layouts/error_messages", resource: @user %>

<div class="card grey lighten-4">
  <div class="card-content">
    <span class="card-title"><%= t('.resend_confirmation_instructions', :default => 'Resend confirmation instructions') %></span>
    <%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post, role: "form" }) do |f| %>
      <div class="input-field">
        <%= f.email_field :email, autofocus: true, class: "validate", "data-error" => "invalid email"  %>
        <%= f.label :email %>
      </div>

      <div class="card-action">
        <%= f.submit t('.resend_confirmation_instructions', :default => 'Resend confirmation instructions'), class: "waves-effect waves-light btn light-green lighten-1" %>
      </div>
    <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>
